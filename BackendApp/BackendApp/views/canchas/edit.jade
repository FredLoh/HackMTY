extends ../layout

block content
    h1.
        Cancha ID #{cancha._id}



    form(action='/api/canchas/#{cancha._id}/edit',method='post',name='updatecancha',enctype='application/x-www-form-urlencoded')
        p Name:
            input#inputName(type='text', value='#{cancha.name}', name='name')
        p Longitude:
            input#inputLocation(type='text', value='#{cancha.location[0]}', name='longitude')
        p Latitude:
            input#inputLocation(type='text', value='#{cancha.location[1]}', name='latitude')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update


    form(action='/api/canchas/#{cancha._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
        input(type='hidden',value='DELETE',name='_method', id='#{cancha.id}')
        button(type='submit').
            Delete