<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hackmty.canchas.MainActivity"
    tools:showIn="@layout/app_bar_main">



    <TextView
        android:id="@+id/datetime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:text="Escoge la fecha..."/>

    <Button
        android:id="@+id/btn_datepicker"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha..."
        android:onClick="pickDate"/>

    <TextView
        android:id="@+id/timeslots_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:text="Cuanto tiempo?"/>


    <LinearLayout
        android:id="@+id/timeslots_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center_vertical">

        <NumberPicker
            android:id="@+id/timeslots_hr_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"/>


        <NumberPicker
            android:id="@+id/timeslots_min_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


